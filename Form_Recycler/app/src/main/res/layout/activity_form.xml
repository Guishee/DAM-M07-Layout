<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".Form">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="324dp"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Nombre"
        android:drawableLeft="@drawable/persona1"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="324dp"
        android:layout_height="57dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="10dp"
        android:layout_below="@id/editTextTextPersonName2"
        android:layout_centerHorizontal="true"
        tools:text=""
        android:hint="Email"/>

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="324dp"
        android:layout_height="57dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Telefono"
        android:text=""
        android:layout_below="@id/editTextTextEmailAddress"
        android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="323dp"
        android:layout_height="57dp"
        android:layout_below="@+id/editTextTextPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/persona2"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="308dp"
        android:layout_height="121dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="LA APP está especialmente sensibilizada en la protección de los datos de los USUARIOS. Mediante la presente Política de Privacidad. LA APP informa a los USUARIOS del tratamiento y usos a los que se someten los datos de carácter personal que se recaban en la APP, libre y voluntariamente, si desean facilitar la información solicitada."
        android:textSize="13dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/paco"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextPhone"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paco"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="Política de privacidad:"
        android:textColor="#000000"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Formulario"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/botonLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:onClick="listaProductos"
        android:text="Lista de productos"

        />

</RelativeLayout>